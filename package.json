{
  "name": "shaderconverter",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc && vite build",
    "format": "prettier --write .",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest related src/*.{js,ts}",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.0.9"
  },
  "lint-staged": {
    "src/*.{js,ts}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "handlebars": "^4.7.8"
  },
  "engines": {
    "pnpm": "^8.0.0"
  }
}
